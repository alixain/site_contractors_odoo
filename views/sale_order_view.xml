<odoo>
    <!-- Add Contractor + Site Tab inside Contact -->
    <record id="view_partner_form_inherit_contractor" model="ir.ui.view">
        <field name="name">res.partner.contractor.site.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Contractors &amp; Sites" name="contractor_info">
                    <field name="contractor_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="details"/>
                            <field name="site_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="details"/>
                                </tree>
                            </field>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <!-- Show Contractor + Site on Sale Order -->
    <record id="view_order_form_contractor" model="ir.ui.view">
        <field name="name">sale.order.contractor.site</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contractor_id"/>
                <field name="site_id"/>
            </xpath>
        </field>
    </record>
</odoo>