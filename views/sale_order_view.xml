<odoo>
    <record id="sale_order_form_inherit_contractor_site" model="ir.ui.view">
        <field name="name">sale.order.form.contractor.site</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add fields after Customer -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contractor_id"/>
                <field name="site_id"/>
            </xpath>

        </field>
    </record>
</odoo>