<odoo>
<record id="sale_order_form_inherit_contractor_site" model="ir.ui.view">
<field name="name">sale.order.form.inherit.contractor.site</field>
<field name="model">sale.order</field>
<field name="inherit_id" ref="sale.view_order_form"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='partner_id']" position="after">
<field name="contractor_id"/>
<field name="site_id"/>
</xpath>
</field>
</record>


<!-- Add search filters to sale order search view if present -->
<record id="sale_order_search_inherit_contractors" model="ir.ui.view">
<field name="name">sale.order.search.inherit.contractor.site</field>
<field name="model">sale.order</field>
<field name="inherit_id" ref="sale.view_order_filter"/>
<field name="arch" type="xml">
<xpath expr="//filter" position="after">
<field name="contractor_id" string="Contractor"/>
<field name="site_id" string="Site"/>
</xpath>
</field>
</record>
</odoo>